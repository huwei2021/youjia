page{
  margin:0 auto;
  width:95%;
}
swiper{
  margin-top: 5px;
  height: 350rpx;
  width:100%;
}
swiper image{
  height: 500rpx;
  width:100%;
}
.choose {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 25rpx;
}

.icon_css {
  margin:0 auto;
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.icon_img {
  width: 80rpx;
  height: 80rpx;
}

.icon_text {
  justify-content:center;
  font-size:30rpx;
}
.hot{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
}

.footswiper{
  width:95%;
  height:150px;
  margin:0 auto;
  margin-top:10px;
}
.hotimage{
  width:400rpx;
  height:135px;
}

.hotbox{
  width:100%;
  margin:0 auto;
  display: flex;
  flex-direction: row;
}
.textbox{
  margin-left: 30rpx;
  display: table;
  height:135px;
}
.hottext{
  display:table-cell;
  vertical-align: middle;
}